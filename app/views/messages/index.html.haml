.contents
  .contents__left
    .test-user
      .test-user__box
        =current_user.name
      .test-user__icon
        =link_to new_group_path,class:"flysite" do
          = fa_icon 'edit'
          %span<> 
        =link_to edit_user_path(current_user),class:"flysite" do
          = fa_icon 'cog'
    .wrapper
      = render partial: 'shared/side_bar'

  .text(data-id= "#{@group.id}")
    .text__group
      .group
        .group__name
          = @group.name
      .member
        現在ログイン中：
        = current_user.name

      .edit
        =link_to edit_group_path(@group),class:"flysite" do
          Edit

    .center
      .center-text
        = render @messages
  .message-send
    = render partial: 'messages/send' 



